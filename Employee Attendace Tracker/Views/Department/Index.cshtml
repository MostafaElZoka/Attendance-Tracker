@using Business_Layer.DTOs

@model IEnumerable<DepartmentDto>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="Create" class="btn btn-success">Add Department</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Location</th>
                <th>Employees</th> 
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var dept in Model)
                {
                    <tr>
                        <td>@dept.Name</td>
                        <td>@dept.Code</td>
                        <td>@dept.Location</td>
                        <td>@dept.EmployeesCount</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@dept.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No departments found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>