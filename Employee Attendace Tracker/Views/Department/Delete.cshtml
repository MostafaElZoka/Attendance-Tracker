@using Business_Layer.DTOs

@model DepartmentDto
@{
    ViewData["Title"] = "Delete Department";
}

<h2 class="mb-4">Delete Department</h2>
@if (ViewBag.EmployeeCount > 0)
{
    <div class="alert alert-info">
        <p>You can't delete this department, it has employees assigned to it.</p>
    </div>
}
else
{
    <div class="alert alert-warning">
        <h4 class="alert-heading">Are you sure you want to delete this department?</h4>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Code</dt>
                <dd class="col-sm-9">@Model.Code</dd>

                <dt class="col-sm-3">Location</dt>
                <dd class="col-sm-9">@Model.Location</dd>

                <dt class="col-sm-3">Employees in Department</dt>
                <dd class="col-sm-9">@ViewBag.EmployeeCount</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
}

