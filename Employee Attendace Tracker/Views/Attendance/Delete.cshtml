@using Business_Layer.DTOs
@model AttendanceDto
@{
    ViewData["Title"] = "Delete Attendance Record";
}

<h2 class="mb-4">Delete Attendance Record</h2>

<div class="alert alert-warning">
    <h4 class="alert-heading">Are you sure you want to delete this Record?</h4>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Employee Code</dt>
            <dd class="col-sm-9">@Model.EmployeeId</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Department Name</dt>
            <dd class="col-sm-9">@Model.DepartmentName</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("yyyy-MMMM-dd")</dd>

            <dt class="col-sm-3">Attendance Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>