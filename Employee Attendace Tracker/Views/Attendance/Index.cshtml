@using Business_Layer.DTOs
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<AttendanceDto>
@{
    ViewData["Title"] = "Attendance List";
    var employees = ViewBag.Employees;
    var departments = ViewBag.Departments;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Attendance Records</h2>
        <a asp-action="Mark" class="btn btn-primary">Mark Attendance Calender</a>
    </div>
</div>

<form method="get" class="bg-light p-3 mb-4 rounded">
    <div class="row g-3">
        <div class="col-md-3">
            <label class="form-label">Employee</label>
            <select name="employeeId" asp-items="employees" class="form-select">
                <option value="">All Employees</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Department</label>
            <select name="deptId" asp-items="departments" class="form-select">
                <option value="">All Departments</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">From Date</label>
            <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate" />
        </div>

        <div class="col-md-3">
            <label class="form-label">To Date</label>
            <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate"/>
        </div>

        <div class="col-md-12 mt-3">
            <button type="submit" class="btn btn-primary">Apply Filters</button>
@*             <a asp-action="Index" class="btn btn-secondary">Clear Filters</a>
 *@        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Employee</th>
            <th>Department</th>
            <th>Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.DepartmentName</td>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    <span>@item.Status</span>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? Model.PageCount : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model,page => Url.Action("Index", new{page}))