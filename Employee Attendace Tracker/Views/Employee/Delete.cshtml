@using Business_Layer.DTOs
@model EmployeeDto
@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">
            @Model.Code
        </dd>

        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">
            @Model.FullName
        </dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@ViewBag.Department</dd>

        <dt class="col-sm-2">Department Code</dt>
        <dd class="col-sm-10">@ViewBag.DepartmentId</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Code" method="post">
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>