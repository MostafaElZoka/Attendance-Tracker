@using Microsoft.AspNetCore.Mvc.Rendering

@model EmployeeDetailsViewModel
@{
    ViewData["Title"] = "Employee Details";
    var departments = ViewBag.Departments as SelectList;
}

<h2>Employee Details</h2>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Employee Code</dt>
            <dd class="col-sm-8">@Model.Employee.Code</dd>

            <dt class="col-sm-4">Full Name</dt>
            <dd class="col-sm-8">
                @Model.Employee.FullName.FirstName
                @Model.Employee.FullName.SecondName
                @Model.Employee.FullName.ThirdName
                @Model.Employee.FullName.LastName
            </dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Employee.Email</dd>

            <dt class="col-sm-4">Department</dt>
            <dd class="col-sm-8">@Model.DepartmentName</dd>
        </dl>
    </div>

    <div class="col-md-6">
        <h4>Attendance Summary (This Month)</h4>
        <dl class="row">
            <dt class="col-sm-4">Presents</dt>
            <dd class="col-sm-8">@Model.AttendanceSummary.Presents</dd>

            <dt class="col-sm-4">Absents</dt>
            <dd class="col-sm-8">@Model.AttendanceSummary.Absents</dd>

            <dt class="col-sm-4">Percentage</dt>
            <dd class="col-sm-8">@Model.AttendanceSummary.Percentage %</dd>
        </dl>
    </div>
</div>